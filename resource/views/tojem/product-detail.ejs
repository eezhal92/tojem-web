<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= app.tagline %> | <%= app.name %></title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .container {
      max-width: 480px;
      margin: 0 auto;
    }

    .bg-fb {
      background-color: #4080ff;
    }

    .item {
      box-shadow: rgba(0, 0, 0, 0.24) 0px 0px 0.1rem, rgba(0, 0, 0, 0.12) 0px 0.1rem 0.2rem;
    }
  </style>
</head>
<body class="bg-grey-lightest font-sans font-normal text-black leading-normal">

  <%- include('./_partials/header', { query: '' }) %>

  <div id="app" class="container" style="padding-top: 68px">
    <div class="mx-4">

      <div class="item bg-white border border-grey mb-4">
        <div style="padding: 0.2rem;">
          <image-carousel :images="<%= JSON.stringify(product.productImages) %>"></image-carousel>
          <div class="p-4">
            <div class="detail">
              <p class="font-bold text-lg"><%= product.name %></p>
              <p class="text-sm text-grey-darker mt-2"><span>🏪 <%= product.store.name %></span></p>
              <p class="mt-2 text-green font-bold">💰<%= product.price.toLocaleString() %></p>
              <button class="bg-fb mt-2 text-white p-2 rounded ">☎️ Hubungi Penjual</button>
            </div>
          </div>
        </div>

        <div class="action p-4 border-t border-grey-lighter">
          <%= product.description %>
        </div>
      </div>

      <div class="text-center my-8">
        <a href="/cari" class="border bg-white border-red text-red p-2 rounded">Cari yang lain🔍</a>
      </div>
    </div>
  </div>

  <script src="/js/product-detail.js"></script>
</body>
</html>
