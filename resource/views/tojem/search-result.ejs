<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= app.tagline %> | <%= app.name %></title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .container {
      max-width: 480px;
      margin: 0 auto;
    }

    .bg-fb {
      background-color: #4080ff;
    }

    .item {
      box-shadow: rgba(0, 0, 0, 0.24) 0px 0px 0.1rem, rgba(0, 0, 0, 0.12) 0px 0.1rem 0.2rem;
    }
  </style>
</head>
<body class="bg-grey-lightest font-sans font-normal text-black leading-normal">
  <%- include('./_partials/header', { query }) %>

  <%- include('./_partials/location') %>

  <div class="container">
    <div class="mx-4">
      <h1 class="mt-4 mb-8">
        <% if (query) { %>
          Hasil pencarian <%= '"' + query + '"' %>
        <% } else { %>
          Temukan berbagai barang dan makanan
        <% } %>
      </h1>

      <% if (!products.length) { %>
      <p class="text-lg">ğŸ˜… Ga ada apa-apa...</p>
      <% } %>

      <% products.forEach((product) => { %>
      <div class="item bg-white border border-grey mb-4">
        <div style="padding: 0.2rem;">
          <div style="width: 100%; min-height: 220px" class="bg-grey-lighter">
            <%
              const imageUrl = product.productImages[0]
                ? product.productImages[0].url
                : ''
            %>
            <img class="w-full" src="<%= imageUrl %>" alt="">
          </div>
          <div class="p-4">
            <div class="detail">
              <p class=""><%= product.name %></p>
              <p class="text-sm text-grey-darker mt-2"><span>ğŸª <%= product.store.name %></span></p>
              <p class="mt-2 text-green font-bold">ğŸ’°<%= product.price.toLocaleString() %></p>
            </div>
          </div>
        </div>

        <div class="action p-2 border-t border-grey-lighter text-right">
          <a href="/item/<%= product.id %>" class="bg-white border text-grey-darker p-2 rounded ">ğŸ‘€ Lihat</a>
          <a href="https://www.facebook.com/dialog/send?app_id=159369768035937&display=popup&link=http%3A%2F%2Flocalhost%3A3000&redirect_uri=https%3A%2F%2Fshopee.co.id%2FBola-Basket-GG7X-Original-i.5825055.65803759%23close" class="bg-fb text-white p-2 rounded ">â˜ï¸ Hubungi Penjual</a>
        </div>
      </div>
      <% }) %>

    </div>
  </div>

  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDsFWS_Rjf5jRilvkVDl2GrlyWBfs69AQM"></script>
  <script src="/js/search-result.js"></script>
</body>
</html>
