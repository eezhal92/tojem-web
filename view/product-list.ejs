<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Daftar Produk | Social Commerce</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Daftar Produk</h1>
    <a class="btn" href="/products/create">Tambah Produk</a>
    <a class="btn" href="/posts/create">Buat Postingan</a>
    <hr>
    <ul>
      <% products.forEach(function (product) { %>
        <li>
          <a href="/products/<%= product.id %>"><%= product.name %></a>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
